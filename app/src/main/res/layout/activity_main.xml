<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgg"
    android:orientation="vertical">
    <LinearLayout
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="70dp"
            android:layout_width="80dp"
            android:src="@drawable/baseline_webhook_24"
            />
        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="15dp"
            android:text="WEBHOOK"
            android:textColor="@color/black"
            >
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="90dp">

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="21dp"
        android:textSize="25dp"
        android:text="START YOUR JOURNEY!"
        android:textColor="@color/black"
        >
    </TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="90dp">
        <TextView
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="Sign up to WEBHOOK"
            android:textSize="25dp"
            android:textColor="@color/black"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/baseline_account_circle_24" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:hint="ENTER YOUR USERNAME"
            android:textColorHint="@color/black"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/baseline_alternate_email_24" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:hint="ENTER YOUR EMAIL"
            android:textColorHint="@color/black"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/baseline_border_color_24" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:hint="ENTER YOUR PASSWORD"
            android:textColorHint="@color/black"
            >
        </EditText>
    </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/blueee"
                    android:text="Remember it                               Forgot Password?" />
            </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp">
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:text="SIGN UP"
        android:backgroundTint="@color/blueee"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:text="------or sign up with------"
            android:textColor="@color/black"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="60dp">
        <ImageView
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/f"/>
        <ImageView
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/g" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/x" />
    </LinearLayout>
</LinearLayout>